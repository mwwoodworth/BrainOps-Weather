<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/material3_card_settings_list_item_corner_radius" />
            <gradient
                android:angle="135"
                android:centerColor="@color/brainops_gradient_mid"
                android:endColor="@color/brainops_gradient_end"
                android:startColor="@color/brainops_gradient_start" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/material3_card_settings_list_item_corner_radius" />
            <solid android:color="@color/brainops_surface_glass" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/material3_card_settings_list_item_corner_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/brainops_primary" />
            <solid android:color="#14FFFFFF" />
        </shape>
    </item>
</layer-list>
