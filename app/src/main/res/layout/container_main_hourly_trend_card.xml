<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/OverdropCard"
    android:id="@+id/container_main_hourly_trend_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/hourly_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_overdrop_header"
            android:paddingStart="@dimen/large_margin"
            android:paddingTop="@dimen/large_margin"
            android:paddingEnd="@dimen/large_margin"
            android:paddingBottom="@dimen/small_margin"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/hourly_block_title_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:importantForAccessibility="no"
                android:tint="@color/md_theme_onSurface"
                android:src="@drawable/ic_schedule" />

            <TextView
                android:id="@+id/hourly_block_title"
                android:accessibilityHeading="true"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/md_theme_onSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/hourly_forecast" />
        </LinearLayout>

        <TextView
            android:id="@+id/hourly_block_subtitle"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_width="match_parent"
            style="@style/content_text"
            android:textColor="@color/md_theme_onSurfaceVariant"
            tools:text="Rain Wednesday evening" />

        <com.google.android.material.button.MaterialButtonGroup
            android:id="@+id/hourly_block_button_group"
            style="@style/Widget.Material3Expressive.MaterialButtonGroup.Connected"
            app:overflowMode="menu"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

        <org.breezyweather.ui.common.widgets.trend.TrendRecyclerView
            android:id="@+id/hourly_block_trendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hourly_trend_item_height"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
